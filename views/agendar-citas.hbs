<header>
    <h1>Centro médico</h1>
</header>
<main>
    <h2><center><font color="white">AGENDAMIENTO DE CITAS</font></center></h2>
    <div class="container-form">
        <form method="post" action="/agregar-cita">
            <label for="cedula"><font color="white">Número de cedula:</font> </label>
            <input type="number" id="cedula" name="cedula" required>
            <label for="fecha_cita"><font color="white">Fecha de cita medica:</font></label>
            <input type="date" id="fecha_cita" name="fecha_cita" required>
            <label for="medico"><font color="white">Especialista:</font></label>
            <select name="medico" id="medico" required>
                <option value="">----------Seleccione una opcion-----------</option>
                {{#each resultado}}
                    <option value="{{cedula}}">{{nombres}} {{apellidos}}</option>
                {{/each}}
            </select><br><br>
            <input type="submit" value="Enviar" id="Enviar"><br><br>
        </form>
        <center><a href="../index.html"><input type="button" value="Volver" id="Volver"></a></center>
    </div>
</main>
